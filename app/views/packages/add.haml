.page
  .page__header
    .page__header__infos
      %h1.page__title Add Package
      %p.page__description Add a package from a Github repository.

  - if @outcome && @outcome.errors.any?
    .page__errors
      - @outcome.errors.full_messages.each do |message|
        %p= message

  = form_with url: '/package', method: :post, class: 'add-package' do
    = label_tag(:repository, "Repository")
    = text_field_tag(:repository, params[:repository], placeholder: 'mint-lang/mint-codemirror')
    = submit_tag("Add", class: 'btn btn--neutral')
