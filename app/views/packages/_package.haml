- version = package.latest_version

.package
  .package__row
    .package__row__left
      .package__name
        = link_to repo_root_path(package.author, package.repo) do
          = search_highlighted version.name
          .package__latest_version
            = version.version

      .package__summary
        = search_highlighted version.description

  .package__infos
    = link_to repo_author_path(package.author) do
      %img{ src: "https://github.com/#{package.author}.png?size=20",
            alt: package.author }
      %span= package.author

    - if package.pushed_at
      .package__pushed_at
        = octicon "history"
        %span
          = distance_of_time_in_words(Time.now, package.pushed_at)
          ago

    .package__stars
      = octicon "star"
      = package.stars

